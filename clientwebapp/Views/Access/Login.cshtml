@model clientwebapp.Models.Empleado2;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <form asp-controller="Access" asp-action="Login" method="post">
        <h1>Login</h1>
        <input type="text" placeholder="Cargo" asp-for="DescripcionCargo"/>
        <input type="password" placeholder="PassWord" asp-for="Rut"/>

        <label>
            <input type="checkbox" asp-for="KeepLoggedIn" />
            Keep me logged In.
        </label>
        <button type="submit">Login</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }

    </form>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant Siglo XXI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tableApi.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                 <a class="navbar-brand" asp-controller="Productos" asp-action="Index"><h6>Ingresar Orden</h6></a>

                 <a class="navbar-brand" asp-controller="Bebida" asp-action="Index"><h6>Bebestibles</h6></a>

                 <a class="navbar-brand" asp-controller="Productos" asp-action="Index"><h6>Pedir Extra</h6></a>

                  <a class="navbar-brand" href="/Cart/Index"><h6>Pagar Cuenta</h6></a>

                 <a class="navbar-brand"  href="/Productos/Index"><h6>Llamar Mesero</h6></a>
            </div>
        </nav>
    </header>
    <div class="container">
                <main role="main" class="pb-3">
                        <div class="row">

                                <div class="col">
                                        <partial name="_NotificationPartial" />
                                        @RenderBody()
                                </div>
                        </div>
                </main>
        </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Restaurant Siglo XXI- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

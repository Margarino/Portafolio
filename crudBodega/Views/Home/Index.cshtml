@model crudBodega.Models.Adm


<h1>Inicio de sesión</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Menu" asp-controller="Home">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rut" class="control-label">Ingresar rut: </label>
                <input asp-for="Rut" class="form-control" placeholder="Ej: 198188360" />
                <span asp-validation-for="Rut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pass" class="control-label">Ingresar contraseña: </label>
                <input asp-for="Pass" class="form-control" placeholder="************" />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
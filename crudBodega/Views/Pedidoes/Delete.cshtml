@model crudBodega.Models.Pedido

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Pedido</h3>
<div>
    <h4>Cualquier cambio realizado acá será irreversible</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <a>Cantidad Pedido</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contpedido)
        </dd>
        <dt class = "col-sm-2">
            <a>Rut Solicitante</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rut)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Idpedido" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>

@model IEnumerable<crudAdmin.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Índice</h1>

<p>
    <a asp-action="Create">Crear nuevo empleado</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Rut">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Rut">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Rut">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
